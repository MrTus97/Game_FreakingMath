<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutPlay"
    tools:context=".InGameActivity">
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0   "
        android:textSize="30dp"
        android:textStyle="bold"
        android:theme="@style/SmallTextStyle"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tvFomula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:text="a + b"
        android:theme="@style/BigTextStyle"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="=c"
        android:theme="@style/BigTextStyle"
        android:layout_below="@+id/tvFomula"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/imvCorrect"
        android:layout_width="156dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/correct" />

    <ImageView
        android:id="@+id/imvIncorect"
        android:layout_width="120dp"
        android:layout_height="122dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/incorrect" />
</RelativeLayout>